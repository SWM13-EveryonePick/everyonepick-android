<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_login"
    app:startDestination="@id/landing1Fragment">

    <fragment
        android:id="@+id/landing1Fragment"
        android:name="org.soma.everyonepick.login.ui.landing.Landing1Fragment"
        android:label="Landing1Fragment">
        <action
            android:id="@+id/action_landing1_to_landing2"
            app:destination="@id/landing2Fragment"/>
    </fragment>

    <fragment
        android:id="@+id/landing2Fragment"
        android:name="org.soma.everyonepick.login.ui.landing.Landing2Fragment"
        android:label="Landing2Fragment">
        <action
            android:id="@+id/action_landing2_to_landing3"
            app:destination="@id/landing3Fragment"/>
    </fragment>

    <fragment
        android:id="@+id/landing3Fragment"
        android:name="org.soma.everyonepick.login.ui.landing.Landing3Fragment"
        android:label="Landing3Fragment">
        <action
            android:id="@+id/action_landing3_to_login"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="org.soma.everyonepick.login.ui.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_login_to_faceinformationdescription"
            app:destination="@id/faceInformationDescriptionFragment"/>
    </fragment>

    <fragment
        android:id="@+id/faceInformationDescriptionFragment"
        android:name="org.soma.everyonepick.login.ui.faceinformation.FaceInformationDescriptionFragment"
        android:label="FaceInformationDescriptionFragment">
        <action
            android:id="@+id/action_login_to_faceinformationcamera"
            app:destination="@id/faceInformationCameraFragment"/>
    </fragment>

    <fragment
        android:id="@+id/faceInformationCameraFragment"
        android:name="org.soma.everyonepick.login.ui.faceinformation.FaceInformationCameraFragment"
        android:label="FaceInformationCameraFragment">
        <action
            android:id="@+id/action_login_to_faceinformationcomplete"
            app:destination="@id/faceInformationCompleteFragment"/>
    </fragment>

    <fragment
        android:id="@+id/faceInformationCompleteFragment"
        android:name="org.soma.everyonepick.login.ui.faceinformation.FaceInformationCompleteFragment"
        android:label="FaceInformationCompleteFragment">
    </fragment>

</navigation>