<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingItemLayout">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginStart">@dimen/margin_side_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_half</item>
        <item name="android:paddingLeft">@dimen/margin_side_half</item>
        <item name="android:paddingRight">@dimen/margin_side_half</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/border_bottom_with_ripple</item>
    </style>
    <style name="SettingItemLayoutWithoutRipple">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginStart">@dimen/margin_side_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_half</item>
        <item name="android:paddingLeft">@dimen/margin_side_half</item>
        <item name="android:paddingRight">@dimen/margin_side_half</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/border_bottom</item>
    </style>
    <style name="SettingItemText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_marginStart">@dimen/margin_side_half</item>
    </style>
    <style name="SettingItemTextWithoutIcon" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title</item>
    </style>
    <style name="CustomSwitch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:track">@drawable/switch_track_selector</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>
</resources>