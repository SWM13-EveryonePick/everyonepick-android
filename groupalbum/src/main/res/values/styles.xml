<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ListCardView" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/margin_side</item>
        <item name="android:layout_marginRight">@dimen/margin_side</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
    </style>
    <style name="BottomButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_marginLeft">@dimen/margin_side_bottom_button</item>
        <item name="android:layout_marginRight">@dimen/margin_side_bottom_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_bottom_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_with_small_radius_blue</item>
    </style>
    <style name="EmptyText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="EmptyButton" parent="Widget.MaterialComponents.CardView">
        <item name="android:minWidth">150dp</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/primary_blue</item>
    </style>
    <style name="EmptyButtonInnerText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>
    <style name="TabText" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/noto_sans_kr_light</item>
    </style>
</resources>