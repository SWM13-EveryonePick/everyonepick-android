<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="org.soma.everyonepick.groupalbum.ui.GroupAlbumParentViewPagerFragment" />
        <variable
            name="viewModel"
            type="org.soma.everyonepick.groupalbum.viewmodel.GroupAlbumParentViewPagerViewModel" />
        <import type="android.view.View" />
        <import type="org.soma.everyonepick.groupalbum.utility.GroupAlbumListMode" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.groupalbum.GroupAlbumViewPagerFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/group_album_background"
            android:scaleType="fitStart"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_actionbar"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- TODO: app_name, 단체공유앨범 텍스트 추가 after getting original background -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.groupAlbumListMode == GroupAlbumListMode.NORMAL_MODE.ordinal()? @string/select: @string/select_all}"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="68dp"
                android:layout_marginRight="36dp"
                android:visibility="@{viewModel.currentItem == 0? View.VISIBLE: View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{() -> fragment.onClickSelectButton()}"
                tools:text="선택"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_actionbar"
            app:layout_constraintBottom_toTopOf="@id/viewpager2"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tablayout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
