<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_login"
    app:startDestination="@id/fragment_landing1">

    <fragment
        android:id="@+id/fragment_landing1"
        android:name="org.soma.everyonepick.login.ui.landing.Landing1Fragment"
        android:label="Landing1Fragment">
        <action
            android:id="@+id/to_landing2"
            app:destination="@id/fragment_landing2"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_landing2"
        android:name="org.soma.everyonepick.login.ui.landing.Landing2Fragment"
        android:label="Landing2Fragment">
        <action
            android:id="@+id/to_landing3"
            app:destination="@id/fragment_landing3"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_landing3"
        android:name="org.soma.everyonepick.login.ui.landing.Landing3Fragment"
        android:label="Landing3Fragment">
        <action
            android:id="@+id/to_login"
            app:destination="@id/fragment_login"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_login"
        android:name="org.soma.everyonepick.login.ui.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/to_face_information_description"
            app:destination="@id/fragment_face_information_description"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_face_information_description"
        android:name="org.soma.everyonepick.login.ui.faceinformation.FaceInformationDescriptionFragment"
        android:label="FaceInformationDescriptionFragment">
        <action
            android:id="@+id/to_face_information_camera"
            app:destination="@id/fragment_face_information_camera"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_face_information_camera"
        android:name="org.soma.everyonepick.login.ui.faceinformation.FaceInformationCameraFragment"
        android:label="FaceInformationCameraFragment">
        <action
            android:id="@+id/to_face_information_complete"
            app:destination="@id/fragment_face_information_complete"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_face_information_complete"
        android:name="org.soma.everyonepick.login.ui.faceinformation.FaceInformationCompleteFragment"
        android:label="FaceInformationCompleteFragment">
    </fragment>

</navigation>