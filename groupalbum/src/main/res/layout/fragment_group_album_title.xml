<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.soma.everyonepick.groupalbum.viewmodel.GroupAlbumTitleViewModel" />
        <variable
            name="onClickCreateButton"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.groupalbumlist.creategroupalbum.GroupAlbumTitleFragment">

        <org.soma.everyonepick.common_ui.CustomActionBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_action_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:hasBackButton="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@={viewModel.title}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_bottom_button"
            android:text="생성하기"
            android:onClick="@{onClickCreateButton}"
            android:enabled="@{!viewModel.title.empty}"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>