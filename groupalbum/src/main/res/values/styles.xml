<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ListCardView" parent="CardView">
        <item name="android:layout_marginStart">@dimen/margin_side</item>
        <item name="android:layout_marginEnd">@dimen/margin_side</item>
        <item name="cardCornerRadius">@dimen/radius_large</item>
    </style>
    <style name="EmptyText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="EmptyButton" parent="Widget.MaterialComponents.CardView">
        <item name="android:minWidth">150dp</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/primary_blue</item>
    </style>
    <style name="EmptyButtonInnerText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>
    <style name="TabText" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/noto_sans_kr_light</item>
    </style>
    <style name="ImageViewFab" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/fab_radius</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="SnsImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>

    </style>
</resources>