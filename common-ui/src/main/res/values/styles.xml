<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WhiteStatusBar.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor">@color/primary_blue</item>
    </style>
    <style name="ActionBarTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title</item>
    </style>
    <style name="BottomButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginStart">@dimen/margin_side_bottom_button</item>
        <item name="android:layout_marginEnd">@dimen/margin_side_bottom_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_bottom_button</item>
        <item name="android:paddingTop">-10dp</item>
        <item name="android:paddingBottom">-10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/noto_sans_kr_light</item>
        <item name="android:background">@drawable/button_with_small_radius_blue</item>
    </style>
</resources>