<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="org.soma.everyonepick.groupalbum.ui.groupalbumlist.groupalbum.GroupAlbumViewPagerFragment.GroupAlbumViewPagerFragmentListener" />
        <variable
            name="viewModel"
            type="org.soma.everyonepick.groupalbum.viewmodel.GroupAlbumViewPagerViewModel" />
        <import type="android.view.View" />
        <import type="org.soma.everyonepick.groupalbum.util.PhotoListMode"/>
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="end">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.groupalbumlist.groupalbum.GroupAlbumViewPagerFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_actionbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <org.soma.everyonepick.common_ui.CustomActionBar
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_action_bar"
                        app:layout_constraintTop_toTopOf="parent"
                        title="@{viewModel.groupAlbum.title}"
                        app:hasBackButton="true"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@{viewModel.photoListMode == PhotoListMode.NORMAL_MODE.ordinal()? @drawable/ic_btn_gnb_check: @drawable/ic_btn_gnb_check_on}"
                        android:layout_marginRight="@dimen/margin_action_bar_item"
                        android:visibility="@{viewModel.currentItem == 1? View.GONE: View.VISIBLE}"
                        android:padding="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/button_drawer"
                        android:onClick="@{() -> listener.onClickSelectButton()}"
                        />

                    <ImageButton
                        android:id="@+id/button_drawer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginRight="@dimen/margin_action_bar"
                        android:src="@drawable/ic_btn_gnb_list"
                        android:onClick="@{() -> listener.onClickDrawerButton()}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:background="@null"
                    app:tabGravity="start"
                    app:tabTextAppearance="@style/TabText"
                    app:tabPaddingStart="20dp"
                    app:tabPaddingEnd="20dp"
                    app:tabPaddingBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@id/layout_actionbar"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layout_top"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/layout_drawer_bottom">

                    <TextView
                        android:id="@+id/text_drawer_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.groupAlbum.title}"
                        android:textSize="32sp"
                        android:layout_margin="@dimen/margin_drawer"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <ImageButton
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:layout_marginLeft="4dp"
                        app:layout_constraintTop_toTopOf="@id/text_drawer_title"
                        app:layout_constraintBottom_toBottomOf="@id/text_drawer_title"
                        app:layout_constraintStart_toEndOf="@id/text_drawer_title"
                        android:onClick="@{() -> listener.onClickDrawerTitleEditButton()}"/>

                    <!-- TODO: 단체 인원 -->

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_drawer_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_drawer_bottom_icon"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageButton
                        android:layout_width="@dimen/size_drawer_bottom_icon"
                        android:layout_height="@dimen/size_drawer_bottom_icon"
                        android:src="@drawable/ic_baseline_output_24"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:onClick="@{() -> listener.onClickDrawerExitButton()}"/>

                    <ImageButton
                        android:layout_width="@dimen/size_drawer_bottom_icon"
                        android:layout_height="@dimen/size_drawer_bottom_icon"
                        android:src="@drawable/ic_baseline_group_remove_24"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/button_drawer_notification"
                        />

                    <ImageButton
                        android:id="@+id/button_drawer_notification"
                        android:layout_width="@dimen/size_drawer_bottom_icon"
                        android:layout_height="@dimen/size_drawer_bottom_icon"
                        android:src="@drawable/ic_baseline_notifications_none_24"
                        android:background="@null"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>